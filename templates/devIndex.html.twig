{% extends 'base.html.twig' %}

{% block title %}{% endblock %}



{% block body %}
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <style>
            body {
                background: #222222;
            }
            h1 {
                background: #222222;
            }
            h1 span {
                display: table-cell;
                animation: animate 3s ease-in-out infinite;

            }

            h1 span:nth-child(1) {
                animation-delay: 0.75s;
            }
            h1 span:nth-child(2) {
                animation-delay: 1s;
            }
            h1 span:nth-child(3) {
                animation-delay: 1.25s;
            }
            h1 span:nth-child(4) {
                animation-delay: 1.5s;
            }
            h1 span:nth-child(5) {
                animation-delay: 1.75s;
            }

            @keyframes animate {
                0%,100% {
                    color: #fff;
                    filter: blur(2px);
                    text-shadow: 0 0 10px #62ff3a,
                    0 0 20px #62ff3a,
                    0 0 40px #62ff3a,
                    0 0 80px #62ff3a,
                    0 0 120px #62ff3a,
                    0 0 200px #62ff3a,
                    0 0 300px #62ff3a,
                    0 0 400px #62ff3a;
                }
                5%,95% {
                    color: #1111;
                    filter: blur(0px);
                    text-shadow: 0 0 10px;
                }
            }


            .link {
                color: lightgreen;
                text-decoration: none;
            }

            .link:hover {

                text-decoration: none;
            }


        </style>
    {% endblock %}
    <div class="container background p-4">
        <div id='target' class=" row bg-light m-4 p-4">
            <a class="link mx-auto" href="{{ path('homepage') }}">
                <h1 class="mx-auto p-5">
                    <section>
                        <h2>
                            <span>U</span>
                            <span>N</span>
                            <span>D</span>
                            <span>E</span>
                            <span>R</span>
                        </h2>
                    </section>
                    Development :)
                </h1>
            </a>
        </div>

    </div>
    <script>

    </script>
{% endblock %}
