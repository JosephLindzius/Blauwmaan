{% extends 'base.html.twig' %}

{% block title %}Blauwmaan | API Caller{% endblock %}
   {% block stylesheets %}
       <style>

           html, body {
               height: 100%;
           }


       </style>
       <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
   {% endblock %}
{% block body %}
<style>

</style>
<div id="wrap">
    <div id="main" class="container clear-top mt-5">
        {% if name is not null %}
            <h1 class="m-5">Hello {{ name }}</h1>

            <h4 class="m-5">This friendly message is coming from:</h4>
            <img class="img-fluid rounded mx-auto d-block" src="{{ api['photo'] }}" alt="picture of {{ api['photo'] }}">
            <ul class="bg-dark text-light text-center p-5 card list-unstyled">
                <li >{{ api['name'] }} {{ api['surname'] }}</li>
                <li> {{ api['gender'] }}</li>
                <li> {{ api['age'] }}</li>
                <li> {{ api['region'] }}</li>
            </ul>
        {% endif %}
        {{ form_start(username) }}
        {{ form_row(username.Username, {'attr': {'class': 'bg-dark', 'placeholder': 'Enter your name here'}})}}
        {{ form_row(username.Submit, {'attr': {'class': 'btn'}})}}
        {{ form_end(username) }}
    </div>
</div>

{% endblock %}
